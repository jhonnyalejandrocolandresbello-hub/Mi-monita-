  <script>
    function crearElemento(texto, clase) {
      const elem = document.createElement("div");
      elem.className = clase;
      elem.innerText = texto;
      elem.style.left = Math.random() * window.innerWidth + "px";
      elem.style.top = "-50px";
      document.body.appendChild(elem);

      setTimeout(() => elem.remove(), 6000);
    }

    // Lluvia automÃ¡tica de "Te amo mi monita ðŸ¤Ž" y corazones
    setInterval(() => {
      crearElemento("Te amo mi monita ðŸ¤Ž", "mensaje");
      if (Math.random() < 0.5) {
        crearElemento("ðŸ¤Ž", "corazon");
      }
    }, 1000);

    // Cada vez que ella toque/click saldrÃ¡ "Te adoro mi princesita bella"
    document.body.addEventListener("click", () => {
      crearElemento("Te adoro mi princesita bella ðŸ’•", "mensaje");
    });
  </script>
